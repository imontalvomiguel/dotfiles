{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "javascript",
    "javascriptreact",
    "json",
    "markdown",
    "scss",
    "typescript",
    "typescriptreact",
    "yaml",
    "liquid"
  ],
  "prettier.documentSelectors": ["**/*.liquid"],
  "languageserver": {
    "liquid": {
      "command": "theme-check-language-server",
      "filetypes": ["liquid"],
      "settings": {
        "themeCheck": {
          "checkOnOpen": true,
          "checkOnChange": true,
          "checkOnSave": true
        }
      },
      "rootPatterns": [".theme-check.yml"]
    }
  }
}
