{
  "[javascript]": {
    "coc.preferences.formatOnSave": false
  },
  "[typescript]": {
    "coc.preferences.formatOnSave": false
  },
  "[liquid]": {
    "coc.preferences.formatOnSave": true
  },
  "[css]": {
    "coc.preferences.formatOnSave": false
  },
  "[markdown]": {
    "coc.preferences.formatOnSave": true
  },
  "[c]": {
    "inlayHint.enable": false
  },
  "[java]": {
    "inlayHint.enable": false
  },
  "[python]": {
    "inlayHint.enable": false
  },
  "prettier.documentSelectors": ["**/*.liquid"],
  "languageserver": {
    "liquid": {
      "command": "theme-check-language-server",
      "filetypes": ["liquid"],
      "settings": {
        "themeCheck": {
          "checkOnOpen": true,
          "checkOnChange": true,
          "checkOnSave": true
        }
      },
      "rootPatterns": [".theme-check.yml"]
    },
    "ocaml-lsp": {
      "command": "opam",
      "args": ["config", "exec", "--", "ocamllsp"],
      "filetypes": ["ocaml", "reason"]
    },
    "clangd": {
      "command": "clangd",
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
    }
  }
}
